.desktop-nav
	display: none

.mobile-menu
	display: flex
	
.mobile-header
	display: flex
	flex-flow: row nowrap
	justify-content: space-around
	align-content: center
	align-items: stretch
	background-color: white
	width: 100%
	position: fixed
	z-index: 100
	box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49)

.mobile-header-item
	margin: 18px 0px 18px 0px
	color: darkNavy
	font-weight: 300
	font-size: 22px
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-flow: 1
	flex-shrink: 0
	-webkit-flex-shrink: 0
	-ms-flex-shrink: 0
	flex-basis: 0
	-webkit-flex-basis: 0
	-ms-flex-basis: 0

.menu-closed, .menu-opened
	display: flex
	flex-flow: column nowrap
	justify-content: space-around
	align-content: center
	align-items: center
	overflow: hidden
	width 100%
	height: 66%
	position: fixed
	top: 67px
	opacity: 0.98
	background-color: darkNavy
	transition: transform 0.6s ease-out
	z-index: 200

.menu-closed
	transform: translateX(-100%)
	
.menu-opened
	transform: translateX(0%)
	box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49)
	
.slide-out-item
	margin: 25px 0px 25px 0px
	color: #fff
	font-weight: 300
	font-size: 22px
	flex-grow: 1
	flex-shrink: 0
	flex-basis: 0

@media only screen and (min-width: 800px)
	.desktop-nav-container
		width: 100%
		max-width 1600px
		height 50px
		position: fixed
		z-index: 100
		box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49)
		
	.mobile-menu
		display: none
	
	.desktop-nav
		display: flex
		flex-flow: row wrap
		justify-content: space-around
		align-content: center
		align-items: stretch
		background-color: white
		width: 100%
		height 100%
	
	.header-item
		margin: 10px 0px 10px 0px
		color: darkNavy
		font-weight: 300
		font-size: 18px
		display: flex
		display: -webkit-flex
		display: -ms-flex
		justify-content: center
		-webkit-justify-content: center
		-ms-justify-content: center
		cursor: pointer
		transition: 0.25s ease
		opacity: 0.7
	
	.header-item:hover
		opacity: 1

	.active-route
		color: darkNavy
		border-bottom: 2px solid darkNavy
		transition: border-bottom 1s ease
		opacity: 1
		font-weight: 600