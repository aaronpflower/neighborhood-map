.wedding-hero
	background-image url("../../../client/img/wedding.jpg")
	// background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 15%, rgba(0, 0, 0, 0.9)), url("../../../client/img/wedding.jpg")
	background-position: center
	background-size: cover

.main-border-wedding-details
	border-top: 1px solid darkNavy

.info-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center

.info-section h1
	padding: 10px
	font-size: 25px

.info-section h2
	font-size: 20px
	padding: 10px
	
.info-section p
	padding: 0px 18px 3px 18px
	line-height: 30px
	font-size: 15px
	text-align: center

.info-item
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-grow: 1
	flex-shrink: 1
	-webkit-flex-shrink: 1
	-ms-flex-shrink: 1
	flex-basis: 400px
	-webkit-flex-basis: 400px
	-ms-flex-basis: 400px

.details
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	padding 25px
.about-party
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	padding: 25px 15px 25px 15px
	width: 100%
	overflow-y: scroll
	max-height 625px

.about-party-item
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	width 100%
	
.about-party h1
	padding: 0px 15px 10px 15px
	
.about-party p
	padding: 0px 15px 10px 15px
	line-height: 25px
	text-align: center
	width 66%
.about-party p:nth-child(1)
		font-weight 600

@media only screen and (min-width: 800px)
	.info-section h1
		font-size: 25px

	.info-section h2
		font-size: 20px
		
	.info-section p
		font-size: 15px
		
	.info-section
		flex-flow: row nowrap
		-webkit-flex-flow: row nowrap
		-ms-flex-flow: row nowrap
		
	.details
		display: flex
		display: -webkit-flex
		display: -ms-flex
		flex-flow: column nowrap
		-webkit-flex-flow: column nowrap
		-ms-flex-flow: column nowrap
		justify-content: flex-start
		-webkit-justify-content: flex-start
		-ms-justify-content: flex-start
		align-content: center
		-webkit-align-content: center
		-ms-align-content: center
		align-items: stretch
		-webkit-align-items: stretch
		-ms-align-items: stretch