.wedding-hero
	// background-image: url("../../../client/img/wedding.jpg")
	background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 15%, rgba(0, 0, 0, 0.9)), url("../../../client/img/wedding.jpg")
	background-position: center
	background-size: cover

.main-border-wedding-details
	border-top: 4px solid tangerine

.info-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center

.info-section h1
	color: darkNavy
	font-size: 35px
	font-weight: 400
	padding: 15px

.info-section h2
	color: darkNavy
	font-size: 25px
	font-weight: 400
	padding: 15px

.info-section p
	color: darkNavy
	font-weight: 200
	font-size: 15px
	padding: 15px

.info-item
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-grow: 1
	flex-shrink: 1
	-webkit-flex-shrink: 1
	-ms-flex-shrink: 1
	flex-basis: 400px
	-webkit-flex-basis: 400px
	-ms-flex-basis: 400px
	padding: 25px

.details
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center

.about-party
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	padding: 25px 15px 25px 15px

.about-party h1
	padding: 0px 15px 10px 15px
	
.about-party p
	padding: 0px 15px 10px 15px
	line-height: 25px
	text-align: justify

@media only screen and (min-width: 800px)
	.info-section
		flex-flow: row nowrap
		-webkit-flex-flow: row nowrap
		-ms-flex-flow: row nowrap
	.details
		display: flex
		display: -webkit-flex
		display: -ms-flex
		flex-flow: column nowrap
		-webkit-flex-flow: column nowrap
		-ms-flex-flow: column nowrap
		justify-content: flex-start
		-webkit-justify-content: flex-start
		-ms-justify-content: flex-start
		align-content: center
		-webkit-align-content: center
		-ms-align-content: center
		align-items: stretch
		-webkit-align-items: stretch
		-ms-align-items: stretch