.registry-hero
	// background-image: url("../../../client/boston.jpg")
	background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 15%, rgba(0, 0, 0, 0.9)), url("../../../client/boston.jpg")
	background-position: center
	background-size: cover

.main-border-registry
	border-top: 4px solid pink

.registry
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	background-color: #fff
	color: darkNavy
	width: 100%

.registry-item
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-grow: 1
	flex-shrink: 1
	-webkit-flex-shrink: 1
	-ms-flex-shrink: 1
	flex-basis: 250px
	-webkit-flex-basis: 250px
	-ms-flex-basis: 250px
	border: 1px solid darkNavy
	width: 100%

.registry-text
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	padding: 15px 5px 25px 5px
		
.registry img
	width: 100%
	height: 100%

.registry h1
	padding: 15px 13px 15px 20px
	
.registry p
	padding: 0px 20px 5px 20px
	line-height: 30px
	text-align: center

@media only screen and (min-width: 800px)
	.registry
		flex-flow: row nowrap
		-webkit-flex-flow: row nowrap
		-ms-flex-flow: row nowrap
	
	.registry-item
		width: 50%
	#crateBarrel div:nth-child(1)
		order: 2
		-webkit-order: 2
		-ms-flex-order: 2
	#crateBarrel div:nth-child(2)
		order: 1
		-webkit-order: 1
		-ms-flex-order: 1