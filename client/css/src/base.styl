// Colors
darkNavy = #2B3742
teal = #029DA1
gray = #AAABAD
peach = #F9933F
pink = #F5888D
tangerine = #FF7902
lime = #0A8E50
lemon = #FEE404

.overlay
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(0, 0, 0, 0.6)
    opacity: 0
    transition: all 0.5s ease-out
    -webkit-transition: all 0.5s ease-out
    -moz-transition: all 0.5s ease-out

.overlay:hover
	opacity: 1

.overlay h1
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	color: #fff
	height: 100%
	width: 100%
	
.bio-overlay-closed, .bio-overlay-opened
	position: fixed
	left: 0px
	top: 0px
	width: 100%
	height: 100%
	text-align: center
	z-index: 1000
	background-color: rgba(0 0 0 0.7)

.bio-overlay-closed
	visibility: hidden

.bio-overlay-opened
	visibility: visible

.modal
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: flex-start
	-webkit-justify-content: flex-start
	-ms-justify-content: flex-start
	width: 100%
	margin-top: 60px
	color: darkNavy
	background-color: #fafafa
	overflow-y: scroll

.modal-x
	float: right
	margin: 15px
	height: 20px
	width: 20px

.modal h1
	font-size: 20px
	font-weight: 500

.modal p
	font-size: 16px
	font-weight: 300

.hero-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	width: 100%
	height: 400px
	background-color: gray
	color: #fff
	padding-top: 77px
	position: fixed
	
.main-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	overflow: hidden
	-webkit-transform: translate3d(0,0,0)
	-webkit-backface-visibility: hidden
	-webkit-perspective: 1000
	background-color: #fafafa

.text-row
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row wrap
	-webkit-flex-flow: row wrap
	-ms-flex-flow: row wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	border-bottom: 1px solid darkNavy
	border-top: 1px solid darkNavy
	width: 100%

.text-row h1
	padding: 35px 16px
	font-size: 27px
	font-weight: 500

.timer-container, .timer-wrapper
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row nowrap
	-webkit-flex-flow: row nowrap
	-ms-flex-flow: row nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	align-self: center
	-webkit-align-self: center
	-ms-align-self: center
	height: 175px

.timer-container
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap	
	padding: 25px
	
.timer
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-flow: 1
	flex-shrink: 0
	-webkit-flex-shrink: 0
	-ms-flex-shrink: 0
	margin: 1px
	
.timer-days
	height: 50px
	width: 84px
	background-color: darkNavy

.timer-hours
	height: 50px
	width: 84px
	background-color: gray

.timer-minutes
	height: 50px
	width: 84px
	background-color: darkNavy

.timer-seconds
	height: 50px
	width: 84px
	background-color: gray
	
.timer h2
	padding: 15px 10px
	color: #fff
	font-size: 20px
	font-weight: 200

.timer p
	padding: 0px 10px
	color: darkNavy

.button
	width: 200px
	height: 50px
	color: #fff
	background-color: darkNavy
	transition: background-color 0.5s ease
	cursor: pointer
	border: 1px solid #fff
	margin: 5px
	align-self: center
	-ms-align-self: center
	-webkit-align-self: center

.button:hover
	background-color: #fff
	color: darkNavy
	border: 1px solid darkNavy

@media only screen and (min-width: 800px)
	.hero-section
		height: 475px
	.main-section
		max-width: 100%
	.modal
		flex-flow: column wrap
		-webkit-flex-flow: column wrap
		-ms-flex-flow: column wrap
		width: 90%
		max-width: 1000px
		flex-basis: auto
		-ms-flex-basis: auto
		-webkit-flex-basis: auto
		margin-top: 50px
