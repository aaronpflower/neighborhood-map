// Colors
darkNavy = #2B3742
teal = #029DA1
gray = #AAABAD
peach = #F9933F
pink = #F5888D
tangerine = #FF7902
lime = #0A8E50
lemon = #FEE404

.hero-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	width: 100%
	height: 400px
	background-position: center
	background-size: cover
	background-color: gray
	color: #fff
	padding-top: 77px
	position: fixed

.main-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	border-left: 2px solid darkNavy
	border-right: 2px solid darkNavy

.text-row
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row wrap
	-webkit-flex-flow: row wrap
	-ms-flex-flow: row wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	border-bottom: 1px solid gray
	border-top: 1px solid gray

.text-row h1
	padding: 25px

.drop-shadow
	-moz-box-shadow: inset 0 8px 8px -8px #000000,
	inset 0 -8px 8px -8px #000000
	-webkit-box-shadow: inset 0 8px 8px -8px #000000,
	inset 0 -8px 8px -8px #000000
	box-shadow: inset 0 8px 8px -8px #000000,
	inset 0 -8px 8px -8px #000000
	
.timer-wrapper
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row nowrap
	-webkit-flex-flow: row nowrap
	-ms-flex-flow: row nowrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	align-self: center
	-webkit-align-self: center
	-ms-align-self: center
	width: 366px

.timer
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-flow: 1
	flex-shrink: 0
	-webkit-flex-shrink: 0
	-ms-flex-shrink: 0
	flex-basis: 88px
	-webkit-flex-basis: 88px
	-ms-flex-basis: 88px
	
.timer-item
	height: 95px
	margin: 1px
	background-color: darkNavy
	color: #fff
	border-radius: 5%

.timer-item h2
	padding: 15px 10px

.timer-item p
	padding: 0px 10px

@media only screen and (min-width: 800px)
	.hero-section
		height: 500px
	.main-section
		max-width: 1280px
		margin 0 auto
