	.hero-wrapper
		padding-top 0px
		top -50px
		// height: 600px
		max-width 1600px
	.hero-wrapper h1
		font-size: 40px
	.hero-wrapper h2
		font-size: 35px
	.main-section
		max-width: 100%
	.modal
		width: 90%
		margin: auto
	.button
		width: 150px
		height: 40px
