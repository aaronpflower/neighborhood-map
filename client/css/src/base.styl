// Colors
darkNavy = #2B3742
teal = #029DA1
gray = #AAABAD
peach = #F9933F
pink = #F5888D
tangerine = #FF7902
lime = #0A8E50
lemon = #FEE404

.hero-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	width: 100%
	height: 400px
	background-color: gray
	color: #fff
	padding-top: 77px
	position: fixed
	
.main-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	border-left: 1px solid darkNavy
	border-right: 1px solid darkNavy

.text-row
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row wrap
	-webkit-flex-flow: row wrap
	-ms-flex-flow: row wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	border-bottom: 1px solid gray
	border-top: 1px solid gray

.text-row h1
	padding: 25px

.timer-container, .timer-wrapper
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row nowrap
	-webkit-flex-flow: row nowrap
	-ms-flex-flow: row nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	align-self: center
	-webkit-align-self: center
	-ms-align-self: center
	height: 175px

.timer-container
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap	
	padding: 25px
	
.timer
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-flow: 1
	flex-shrink: 0
	-webkit-flex-shrink: 0
	-ms-flex-shrink: 0
	margin: 1px
	
.timer-days
	height: 50px
	width: 84px
	background-color: darkNavy

.timer-hours
	height: 50px
	width: 84px
	background-color: gray

.timer-minutes
	height: 50px
	width: 84px
	background-color: darkNavy

.timer-seconds
	height: 50px
	width: 84px
	background-color: gray
	
.timer h2
	padding: 15px 10px
	color: #fff
	font-size: 20px
	font-weight: 200

.timer p
	padding: 0px 10px
	color: darkNavy

.overlay
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(0, 0, 0, 0.6)
    opacity: 0
    transition: all 0.5s ease-out
    -webkit-transition: all 0.5s ease-out
    -moz-transition: all 0.5s ease-out

.overlay:hover
	opacity: 1

@media only screen and (min-width: 800px)
	.hero-section
		height: 475px
	.main-section
		max-width: 1280px
		margin 0 auto
