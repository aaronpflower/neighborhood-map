.overlay
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba(0, 0, 0, 0.6)
    opacity: 0
    transition: all 0.5s ease-out
    -webkit-transition: all 0.5s ease-out
    -moz-transition: all 0.5s ease-out

.overlay:hover
	opacity: 1

.overlay h1
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	color: #fff
	height: 100%
	width: 100%
	
.bio-overlay-closed, .bio-overlay-opened
	position: fixed
	left: 0px
	top: 0px
	text-align: center
	background-color: rgba(0 0 0 0.7)
	transition: all 0.3s ease
	-webkit-transition: all 0.3s ease
	-moz-transition: all 0.3s ease
	-webkit-transform: translate3d(0,0,0)

.bio-overlay-closed
	visibility: hidden
	width: 0
	height: 0

.bio-overlay-opened
	visibility: visible
	z-index: 1000
	width: 100%
	height: 100%

.modal
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	height: 100%
	width: 100%

.modal-text
	display: block
	color: darkNavy
	background-color: #fafafa
	overflow-y: scroll
	padding: 15px

.modal-x
	float: left
	height: 20px
	width: 20px
	cursor: pointer

.modal h1
	font-size: 20px
	font-weight: 500
	text-align: center

.modal p
	font-size: 16px
	font-weight: 300
	text-align: left
	line-height: 20px
	padding: 10px

.hero-wrapper
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: flex-start
	-webkit-justify-content: flex-start
	-ms-justify-content: flex-start
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	width: 100%
	background-color: gray
	color: #fff
	padding-top: 66px
	position: fixed
	z-index: 10
	
.hero-item
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-grow: 1
	flex-shrink: 1
	-webkit-flex-shrink: 1
	-ms-flex-shrink: 1
	flex-basis: auto
	-webkit-flex-basis: auto
	-ms-flex-basis: auto
	position: relative
	background-color: #fff
	
.hero-wrapper img
	height 100%
	width 100%
	
