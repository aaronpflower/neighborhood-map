.hero-content
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	width: 100%
	color: #fff
	position: absolute
	top: 50%
	z-index: 10

.hero-content h1
	padding: 3px
	font-size: 30px
	color: #fff

.hero-content h2
	padding: 3px
	font-size: 25px
	color: #fff

.hero-content p
	width 150px
	height 15px
	font-size 15px
	color #fff
	text-align left
	margin 25px

.main-section
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: space-around
	-webkit-justify-content: space-around
	-ms-justify-content: space-around
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: stretch
	-webkit-align-items: stretch
	-ms-align-items: stretch
	overflow: hidden
	-webkit-transform: translate3d(0,0,0)
	-webkit-backface-visibility: hidden
	-webkit-perspective: 1000
	background-color: #fafafa
	z-index: 10
	position relative

.timer-container, .timer-wrapper
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: row nowrap
	-webkit-flex-flow: row nowrap
	-ms-flex-flow: row nowrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	align-self: center
	-webkit-align-self: center
	-ms-align-self: center
	height: 175px

.timer-container
	flex-flow: column nowrap
	-webkit-flex-flow: column nowrap
	-ms-flex-flow: column nowrap	
	padding: 25px
	
.timer
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-flow: 1
	flex-shrink: 0
	-webkit-flex-shrink: 0
	-ms-flex-shrink: 0
	margin: 1px
	
.timer-days
	height: 50px
	width: 84px
	background-color: darkNavy

.timer-hours
	height: 50px
	width: 84px
	background-color: gray

.timer-minutes
	height: 50px
	width: 84px
	background-color: darkNavy

.timer-seconds
	height: 50px
	width: 84px
	background-color: gray
	
.timer h2
	padding: 15px 10px
	color: #fff
	font-size: 20px
	font-weight: 200

.timer p
	padding: 0px 10px
	color: darkNavy

.button
	width: 180px
	height: 45px
	color: #fff
	background-color: darkNavy
	transition: background-color 0.5s ease
	cursor: pointer
	border: 1px solid #fff
	align-self: center
	-ms-align-self: center
	-webkit-align-self: center

.button:hover
	background-color: #fff
	color: darkNavy
	border: 1px solid darkNavy

