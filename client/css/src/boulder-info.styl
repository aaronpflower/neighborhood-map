.boulder-hero
	background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 15%, rgba(0, 0, 0, 0.9)), url("../../../client/img/boulder.jpg")
	background-position: center
	background-size: cover

.main-border-boulder-info
	border-top: 4px solid lime

.step-section, .step, .step-inverse
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	width: 100%

.step h2
	color: darkNavy
	font-size: 25px
	font-weight: 400
	display: -webkit-flex
	align-self: center
	-webkit-align-self: center
	-ms-align-self: center
	padding: 15px 15px 0px 15px;

.step p
	color: darkNavy
	font-weight: 200
	font-size: 15px
	text-align: justify
	
.step-inverse
	background-color: darkNavy

.step-inverse h2
	color: #fff
	font-size: 25px
	font-weight: 400
	display: -webkit-flex
	align-self: center
	-webkit-align-self: center
	-ms-align-self: center
	padding: 15px

.step-inverse p
	color: #fff
	font-weight: 200
	font-size: 15px
	text-align: justify
	padding-bottom: 15px

.step-button, .step-inverse-button
	width: 180px
	height: 45px
	cursor: pointer
	margin: 5px
	align-self: center
	transition: background-color 0.5s ease

.step-button
	background-color: darkNavy
	color: #fff
	border: 1px solid #fff
	
.step-button:hover
	background-color: #fff
	color: darkNavy
	border: 1px solid darkNavy

.step-inverse-button
	color: darkNavy
	background-color: #fff
	border: 1px solid #fff

.step-inverse-button:hover
	background-color: darkNavy
	color: #fff
	border: 1px solid #fff
	
.step-left, .step-right
	color: darkNavy
	padding: 0px 25px 15px 25px
	line-height: 20px
	display: flex
	display: -webkit-flex
	display: -ms-flex
	flex-flow: column wrap
	-webkit-flex-flow: column wrap
	-ms-flex-flow: column wrap
	justify-content: center
	-webkit-justify-content: center
	-ms-justify-content: center
	align-content: center
	-webkit-align-content: center
	-ms-align-content: center
	align-items: center
	-webkit-align-items: center
	-ms-align-items: center
	width: 100%

.weather-iframe
	height: 245px
	width: 100%
	flex-grow: 1
	-webkit-flex-grow: 1
	-ms-flex-grow: 1
	flex-shrink: 1
	-webkit-flex-shrink: 1
	-ms-flex-shrink: 1
	flex-basis: auto
	-webkit-flex-basis: auto
	-ms-flex-basis: auto

@media only screen and (min-width: 700px)
	.step-right
		flex-flow: row wrap
		-webkit-flex-flow: row wrap
		-ms-flex-flow: row wrap
	.step-left, .step-right
		width: 80%
	.step-inverse-button, .step-button
		width: 150px
		height: 40px